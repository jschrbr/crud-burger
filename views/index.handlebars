<div class="container box">

	<img src="assets/img/hamburger.png">

	<h1>CRUD burger</h1>

</div>


<div class="container center">
	<form
		action="/api/burgers"
		method="POST"
		id="order"
	>
		<div class="row">
			<div class="input-field col s11">
				<i class="material-icons prefix">menu</i>
				<input
					id="icon_prefix"
					type="text"
					name="burger"
				>
				<label for="icon_prefix">Burger Name</label>
			</div>
			<div class="col s1"> <a
					href="#"
					onclick="document.getElementById('order').submit()"
					class="btn-floating btn-large waves-effect waves-light red"
				><i class="material-icons">
						add
					</i>
				</a>
			</div>
		</div>
	</form>
</div>
<div class="row">
	<div class="col s6">
		<div class="container">
			<ul class="collection with-header">
				<li class="collection-header">
					<h5>Ready</h5>
				</li> {{#each burgers}}
				{{#unless devoured}}
				<li class="collection-item">
					<div>
						{{id}}. {{burger_name}}
						<a
							href="#!"
							onclick="document.getElementById('form{{id}}').submit()"
							class="secondary-content"
						>
							<i class="material-icons">restaurant</i>
						</a>
						<form
							id="form{{id}}"
							method="post"
							action="/api/burgers/{{id}}?_method=PUT"
						>

							<input
								type="hidden"
								name="_method"
								value="PUT"
							>


						</form>


					</div>
				</li>
				{{/unless}}
				{{/each}}
			</ul>
		</div>

	</div>
	<div class="col s6">
		<div class="container">
			<ul class="collection with-header">
				<li class="collection-header">
					<h5>Devoured</h5>
				</li>

				{{#each burgers}}
				{{#if devoured}}
				<li class="collection-item disable">
					{{id}}. {{burger_name}}
				</li>

				{{/if}}
				{{/each}}
			</ul>
		</div>

	</div>

</div>