<h1 align="center">CRUD burger</h1>

<div class="container center">
	<form
		action="/api/burgers"
		method="POST"
		id="order"
	>
		<div class="row">
			<div class="input-field col s11">
				<i class="material-icons prefix">menu</i>
				<input
					id="icon_prefix"
					type="text"
					name="burger"
				>
				<label for="icon_prefix">Burger Name</label>
			</div>
			<div class="col s1"> <a
					href="#"
					onclick="document.getElementById('order').submit()"
					class="btn-floating btn-large waves-effect waves-light red"
				><i class="material-icons">
						add
					</i>
				</a>
			</div>
		</div>
	</form>
</div>
<div class="row">
	<div class="col s6">
		<ul>
			{{#each burgers}}
			{{#unless devoured}}
			<li>

				<form
					method="post"
					action="/api/burgers/{{id}}?_method=PUT"
					<input
					type="hidden"
					name="_method"
					value="PUT"
				>
					<textarea
						type="text"
						name="movie"
					>{{burger_name}}</textarea>
					<p>{{devoured}}</p>

					<button type="submit">Eat</button>

				</form>
			</li>

			{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class="col s6">
		<ul>
			{{#each burgers}}
			{{#if devoured}}
			<li>

				<p>{{burger_name}}</p>
				<p>{{devoured}}</p>
			</li>

			{{/if}}
			{{/each}}
		</ul>
	</div>

</div>